<% content_for :title, "Editing todo" %>

<div class="md:grid md:grid-cols-3 md:gap-6">
  <!-- Sidebar -->
  <div class="md:col-span-1">
    <div class="px-4 sm:px-0">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">Edit Todo</h1>
      <p class="mt-1 text-sm text-gray-600">
        Update the details of your todo.
      </p>
      <div class="mt-6 space-x-3">
        <%= link_to "View Todo", @todo, class: "text-sm font-medium text-indigo-600 hover:text-indigo-900 hover:underline" %>
        <span class="text-gray-400">|</span>
        <%= link_to "Back to Todos", todos_path, class: "text-sm font-medium text-indigo-600 hover:text-indigo-900 hover:underline" %>
      </div>
    </div>
  </div>

  <!-- Form section -->
  <div class="mt-5 md:mt-0 md:col-span-2">
    <div class="shadow-sm ring-1 ring-gray-200 sm:rounded-md sm:overflow-hidden bg-white">
      <div class="px-4 py-5 space-y-6 sm:p-6">
        <%= render "form", todo: @todo %>
      </div>
    </div>
  </div>
</div>
