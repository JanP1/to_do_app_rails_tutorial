<% content_for :title, "New Todo" %>

<div class="md:grid md:grid-cols-3 md:gap-6">
  <!-- Sidebar -->
  <div class="md:col-span-1">
    <div class="px-4 sm:px-0">
      <h1 class="text-2xl font-bold text-gray-900 mb-2">New Todo</h1>
      <p class="mt-1 text-sm text-gray-600">
        Create a new todo to track your tasks.
      </p>
      <div class="mt-6">
        <%= link_to "Back to Todos", todos_path, class: "text-indigo-600 hover:text-indigo-900 font-medium transition" %>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="mt-5 md:mt-0 md:col-span-2">
    <div class="shadow sm:rounded-md sm:overflow-hidden">
      <div class="bg-white px-4 py-5 sm:p-6 space-y-6">
        <%= render "form", todo: @todo %>
      </div>
    </div>
  </div>
</div>
